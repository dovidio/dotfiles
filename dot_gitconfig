[user]
	name = Umberto D'Ovidio
	email = umberto.dovidio@gmail.com
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[core]
	autocrlf = input
[alias]
# Aliases taken from gary bernhardt's dotfiles configuration https://github.com/garybernhardt/dotfiles/blob/main/.gitconfig
    st = status
    ci = commit --verbose
    co = checkout
    di = diff --find-copies-harder
    dc = diff --find-copies-harder --cached
    amend = commit --amend
    aa = add --all
    ff = merge --ff-only
    noff = merge --no-ff
    fa = fetch --all
    pom = push origin main
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
